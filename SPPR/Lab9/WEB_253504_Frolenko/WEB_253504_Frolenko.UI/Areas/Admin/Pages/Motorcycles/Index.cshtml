@page
@model WEB_253504_Frolenko.UI.Areas.Admin.Pages.Motorcycles.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Мотоциклы</h1>

<p>
    <a asp-page="Create" class="btn btn-success">
        <i class="bi bi-plus-lg"></i> Создать новый
    </a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Motorcycle[0].Name)</th>
            <th>@Html.DisplayNameFor(model => model.Motorcycle[0].Description)</th>
            <th>@Html.DisplayNameFor(model => model.Motorcycle[0].Category)</th>
            <th>@Html.DisplayNameFor(model => model.Motorcycle[0].Weight)</th>
            <th>Изображение</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Motorcycle)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@(item.Category != null ? item.Category.Name : "No category")</td>
                <td>@Html.DisplayFor(modelItem => item.Weight)</td>
                <td>
                    <img src="@Url.Content(item.ImagePath)" alt="@item.Name" style="max-width:100px; max-height:100px;" />
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                        <i class="bi bi-pencil-square"></i> Редактировать
                    </a>
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                        <i class="bi bi-info-circle"></i> Детали
                    </a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                        <i class="bi bi-trash"></i> Удалить
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
