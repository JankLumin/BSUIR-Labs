@page "/motorcycles"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@using WEB_253504_Frolenko.BlazorWASM.Components
@using WEB_253504_Frolenko.Domain.Entities

<PageTitle>Motorcycles</PageTitle>

<CategorySelector />
<MotorcyclesList MotorcycleSelected="OnMotorcycleSelected" />
<Pager />
<MotorcycleDetails SelectedMotorcycle="SelectedMotorcycle" />

@code {
    [Inject] required public IDataService DataService { get; set; }
    Motorcycle? SelectedMotorcycle { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await DataService.GetProductListAsync();
    }

    void OnMotorcycleSelected(int id)
    {
        SelectedMotorcycle = DataService.Motorcycles.FirstOrDefault(m => m.Id == id);
    }
}
