@page
@model WEB_253504_Frolenko.UI.Areas.Admin.Pages.Motorcycles.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Motorcycle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Motorcycle.Id" />
            <div class="form-group">
                <label asp-for="Motorcycle.Name" class="control-label"></label>
                <input asp-for="Motorcycle.Name" class="form-control" />
                <span asp-validation-for="Motorcycle.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Motorcycle.Description" class="control-label"></label>
                <input asp-for="Motorcycle.Description" class="form-control" />
                <span asp-validation-for="Motorcycle.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Motorcycle.CategoryId" class="control-label"></label>
                <select asp-for="Motorcycle.CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="Motorcycle.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Motorcycle.Weight" class="control-label"></label>
                <input asp-for="Motorcycle.Weight" class="form-control" />
                <span asp-validation-for="Motorcycle.Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Motorcycle.ImagePath" class="control-label"></label>
                <input asp-for="Motorcycle.ImagePath" class="form-control" readonly />
                <span asp-validation-for="Motorcycle.ImagePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Upload">Загрузить новое изображение</label>
                <input type="file" name="Upload" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
