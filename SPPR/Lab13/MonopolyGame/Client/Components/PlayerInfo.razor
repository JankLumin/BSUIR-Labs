@page "/player-info"
@using MonopolyGame.Shared.Models

@if (player == null)
{
    <p>Загрузка данных игрока...</p>
}
else
{
    <div class="player-info">
        <h3>Информация об игроке: @player.Name</h3>
        <p>ID игрока: @player.Id</p>
        <p>Статус: @(player.IsActive ? "Активен" : "Неактивен")</p>
        <p>Баланс: @player.Balance</p>
    </div>

    <button class="btn btn-primary" @onclick="UpdatePlayerInfo">Обновить информацию</button>
}

@code {
    [Parameter]
    public string PlayerId { get; set; }

    private PlayerInfo player;

    protected override async Task OnInitializedAsync()
    {
        await LoadPlayerInfo();
    }

    private async Task LoadPlayerInfo()
    {
        player = await PlayerService.GetPlayerInfoAsync(PlayerId);
    }

    private async Task UpdatePlayerInfo()
    {
        await LoadPlayerInfo(); // Перезагрузка данных игрока
    }
}
