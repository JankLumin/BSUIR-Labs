@page "/create-game"
@inject HttpClient Http
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider

<h3>Создать игру</h3>

<EditForm Model="createGameModel" OnValidSubmit="HandleCreateGame">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div>
        <label>ID игры:</label>
        <InputText @bind-Value="createGameModel.GameId" />
    </div>
    <button type="submit">Создать игру</button>
</EditForm>

@code {
    private CreateGameModel createGameModel = new CreateGameModel();

    private async Task HandleCreateGame()
    {
        var response = await Http.PostAsJsonAsync("api/game/create", createGameModel.GameId);
        if (response.IsSuccessStatusCode)
        {
            Navigation.NavigateTo($"/game/{createGameModel.GameId}");
        }
        else
        {
            // Обработка ошибок (например, игра с таким ID уже существует)
        }
    }

    public class CreateGameModel
    {
        [Required]
        public string GameId { get; set; }
    }
}
