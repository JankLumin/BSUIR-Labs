        x:Name="Progress"
        HorizontalTextAlignment="End"
        VerticalTextAlignment="Center"
        FontSize="20"
        Grid.Row="0"
        Grid.ColumnSpan="4"  
        Text=""
        TextColor="Black"/>
    <Label
