<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="app_253504_Frolenko.UI.Pages.AddOrUpdateBrigadePage"
             xmlns:converters="clr-namespace:app_253504_Frolenko.UI.ValueConverters"
             xmlns:models="clr-namespace:app_253504_Frolenko.UI.ViewModels"
             x:DataType="models:AddOrUpdateBrigadeViewModel"
             Title = "Add or update brigade">
<ContentPage.Resources>
    <converters:ValueToBooleanConverter x:Key="IsNotNull"/>
</ContentPage.Resources>
    <StackLayout Margin="10" Spacing="15">
        <HorizontalStackLayout>
            <Button Text="Pick a png image!" Command="{Binding PickImageCommand}"/>
            <Label Text="Succesfully added" IsVisible="{Binding Image, Converter={StaticResource IsNotNull}}"/>
        </HorizontalStackLayout>
        <VerticalStackLayout>
            <Label Text="Name"/>
            <Entry Text="{Binding Request.Brigade.Name}" Placeholder="Name"/>
        </VerticalStackLayout>
        <VerticalStackLayout>
            <Label Text="Description"/>
            <Entry Text="{Binding Request.Brigade.Description}" Placeholder="Description"/>
        </VerticalStackLayout>
        <Button Text="Save" Command="{Binding AddOrUpdateBrigadeCommand}"/>
    </StackLayout>
</ContentPage>