<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="app_253504_Frolenko.UI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:app_253504_Frolenko.UI.Pages"
    Title="app_253504_Frolenko.UI"
      ForegroundColor="Black">
    <ShellContent
        Title="Home"
        Icon="{FontImage FontFamily=FontAwesome, Color=Black, Glyph=&#127968;}"
        ContentTemplate="{DataTemplate pages:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Brigade list"
        Icon="{FontImage FontFamily=FontAwesome, Color=Black, Glyph=&#128736;}"
        ContentTemplate="{DataTemplate pages:BrigadePage}"
        Route="Brigades" />
</Shell>
